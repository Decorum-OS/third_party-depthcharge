choice
	prompt "ARM Version"
	depends on ARCH_ARM
	default ARCH_ARM_V7
	help
	  Version for ARM Arch

config ARCH_ARM_V7
	bool "ARMv7"

config ARCH_ARM_V8
	bool "ARMv8"

endchoice

if ARCH_ARM_V8

config DMA_LIM_EXCL
	hex "DMA address limit(exclusive) in MiB units"
	default 0x1000

endif
